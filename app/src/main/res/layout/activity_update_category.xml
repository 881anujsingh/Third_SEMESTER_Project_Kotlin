<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.admin.UpdateCategoryActivity">

    <ImageView
        android:id="@+id/imageViewUpdateCategory"
        android:layout_width="189dp"
        android:layout_height="178dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="84dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/imageViewCategoryUpdate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewUpdateCategory"
        app:layout_constraintStart_toEndOf="@+id/imageViewUpdateCategory"
        app:layout_constraintTop_toTopOf="@+id/imageViewUpdateCategory"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/baseline_add_photo_alternate_24" />

    <EditText
        android:textAlignment="center"
        android:id="@+id/editTextCategoryNameUpdate"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/none"
        android:ems="10"
        android:hint="Enter category name"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewUpdateCategory" />

    <EditText
        android:textAlignment="center"
        android:id="@+id/editTextCategoryDescUpdate"
        android:layout_width="360dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/none"
        android:ems="10"
        android:hint="Enter Category Description"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCategoryNameUpdate" />

    <Button
        android:backgroundTint="@color/black"
        android:id="@+id/btnCategoryUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="52dp"
        android:text="Update Category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCategoryDescUpdate" />

</androidx.constraintlayout.widget.ConstraintLayout>